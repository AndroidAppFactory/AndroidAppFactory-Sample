<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_layout"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@drawable/keyboard_bg"
    android:orientation="horizontal"
    android:padding="8dp">

    <ImageButton
        android:id="@+id/keyboard_switch"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/keyboard_setting_item_bg"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/key_switch" />

    <ImageButton
        android:id="@+id/keyboard_settings"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/keyboard_setting_item_bg"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/key_setting" />

    <ImageButton
        android:id="@+id/keyboard_logcat"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/keyboard_setting_item_bg"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/key_locat" />

    <ImageButton
        android:id="@+id/keyboard_back"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/keyboard_setting_item_bg"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/key_back" />

    <ImageButton
        android:id="@+id/keyboard_clear"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/keyboard_setting_item_bg"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/key_clear" />


    <ImageButton
        android:id="@+id/keyboard_enter"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/keyboard_setting_item_bg"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/key_enter" />


    <ImageButton
        android:id="@+id/keyboard_hide"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:background="@drawable/keyboard_setting_item_bg"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/key_hide" />

</LinearLayout>

